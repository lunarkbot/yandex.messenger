{
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "max-len": ["error", 120],
    "@typescript-eslint/no-explicit-any": "off",
    "import/extensions": "off",
    "no-underscore-dangle": "off",
    "no-unused-vars": "off",
    "default-param-last": "off",
    "class-methods-use-this": "off",
    "no-param-reassign": "off",
    "no-shadow": "off",
    "func-names": "off",
    "consistent-return": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": {} // Это говорит ESLint использовать TypeScript для разрешения путей к модулям
    }
  }
}
