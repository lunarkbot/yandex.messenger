{
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "varsIgnorePattern": "^template$" }],
    "@typescript-eslint/no-unused-vars": ["error", { "varsIgnorePattern": "^template$" }],
    "no-underscore-dangle": ["error", { "allow": ["__DIRNAME"] }],
    "max-len": ["error", 120],
    "import/extensions": ["error", "ignorePackages"]
  }
}
