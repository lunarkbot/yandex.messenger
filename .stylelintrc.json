{
  "extends": "stylelint-config-standard",
  "rules": {
    "selector-class-pattern": [
      "^[a-z][a-zA-Z0-9]*$",
      {
        "resolveNestedSelectors": true,
        "message": "Expected class selector to be camelCase"
      }
    ]
  },
  "ignoreFiles": [
    "build/*",
    "styles/global.css"
  ]
}
